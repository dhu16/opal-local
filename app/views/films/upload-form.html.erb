<body class="body-3">
  <div class="empty-div-2"></div>
  <div data-collapse="medium" data-animation="default" data-duration="400" data-easing="ease" data-easing2="ease" role="banner" class="navbar w-nav">
    <div class="nav-container w-container">
      <div class="nav-content-div" style="display: flex; justify-content: space-between; align-items: center;">
        <%= link_to '/home', class: "w-nav-brand", style: "margin-right: 20px;" do %>
            <%= image_tag("opal_transparent_logo.png", alt: "OPAL logo", class: "logo", loading: "lazy") %>
        <% end %>
        <nav role="navigation" class="nav-menu w-nav-menu">
          <div class="nav-link-div">
            <div class="nav-link-text-div">
              <div data-w-id="b716dcca-f0d7-e553-edb3-c56183bb5160" class="nav-link-text-div">
