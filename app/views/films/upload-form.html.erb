          </div>
            </div>
          </div>
          <!-- Add any additional navigation links here -->
        </nav>
      </div>
    </div>
  </div>
  <div class="empty-div"></div>
  <div class="container-2-upload" style="margin-top: 50px;">
    <div class="submit-form-wrap">
      <h1 class="heading-3">Upload Your Film</h1>
      <%= form_with url: 'upload_video', local: true, html: { multipart: true, class: 'form-2' } do |form| %>
        <div class="input-wrapper">
          <%= form.label :title, 'Title:', class: 'w-label' %>
          <%= form.text_field :title, placeholder: 'Enter the film title', class: 'submission-field w-input' %>
        </div>
        <div class="input-wrapper">
          <%= form.label :description, 'Description:', class: 'w-label' %>
          <%= form.text_area :description, placeholder: 'Tell us about your film', class: 'submission-field w-input' %>
        </div>
        <div class="input-wrapper">
          <%= form.label :video, 'Film File:', class: 'w-label' %>
          <%= form.file_field :video, class: 'submission-field w-input' %>
        </div>
        <div class="input-wrapper">
          <%= form.label :thumbnail, 'Thumbnail Image:', class: 'w-label' %>
          <%= form.file_field :thumbnail, accept: 'image/jpeg,image/gif,image/png', class: 'submission-field w-input' %>
        </div>
        <%= form.submit 'Upload Film', class: 'submit-button-2 w-button' %>
      <% end %>
    </div>
  </div>
  <% if flash[:notice] %>
    <div class="flash-message">
      <%= flash[:notice] %>
    </div>
  <% end %>
