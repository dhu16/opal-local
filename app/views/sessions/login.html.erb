<body class="body-2">
  <div class="wrapper">
    <div class="container-left">
      <div class="image-container">
        <%= image_tag 'opal_transparent_logo.png', loading: 'lazy', width: '414', alt: 'Opal Transparent Logo', class: 'image-3', sizes: '(max-width: 991px) 50vw, 414px', srcset: asset_path('opal_transparent_logo-p-500.png') + ' 500w, ' + asset_path('opal_transparent_logo-p-800.png') + ' 800w, ' + asset_path('opal_transparent_logo-p-1080.png') + ' 1080w, ' + asset_path('opal_transparent_logo-p-1600.png') + ' 1600w, ' + asset_path('opal_transparent_logo-p-2000.png') + ' 2000w, ' + asset_path('opal_transparent_logo-p-2600.png') + ' 2600w, ' + asset_path('opal_transparent_logo-p-3200.png') + ' 3200w, ' + asset_path('opal_transparent_logo.png') + ' 5820w' %>
      </div>
      <div class="div-block-3">
        <p class="login-signup-title">The Netflix for Student Films.<br></p>
        <p class="paragraph-2">Home to the featured work of up and coming student directors from universities around the world.</p>
      </div>
    </div>
    <div class="container-right">
      <div class="signup-container">
        <div class="icon-box">
          <h1>Login</h1>
          <p class="sign-up-text" style="display: none;">Login here.</p>
        </div>
        <div class="form-block w-form">
          <%= form_with url: '/login', local: true, class: 'form' do |form| %>
            <label for="email" class="field-label-2">Email Address</label>
            <%= form.email_field :email, maxlength: 256, placeholder: 'Enter your @uni.edu email address', id: 'email', class: 'form-text-box w-input', required: true %>
            
            <label for="password" class="field-label-3">Password</label>
            <%= form.password_field :password, maxlength: 256, placeholder: 'Enter your password', id: 'password', class: 'form-text-box w-input', required: true %>
            
            <%= form.submit 'Login', data: { wait: 'Please wait...' }, class: 'submit-button w-button' %>
            
            <p class="paragraph-3">
              Don't have an account? <%= link_to "Signup Here!", signup_path, class: "text-span" %>
            </p>
          <% end %>
          <div class="w-form-done">
            <div>Thank you! Your submission has been received!</div>
          </div>
          <div class="w-form-fail">
            <div>Oops! Something went wrong while submitting the form.</div>
          </div>
        </div>
      </div>
    </div>
